@model FizzBuzz.Web.Models.FizzBuzzViewModels.FizzBuzzViewModel

@{
    ViewBag.Title = "FizzBuzz generator";
}

<h2>FizzBuzz generator</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Parameters</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <div class="row">
            <div class="col-md-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.FizzFactor, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.FizzFactor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.FizzFactor, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.BuzzFactor, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.BuzzFactor, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.BuzzFactor, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="form-group">
                    @Html.LabelFor(model => model.LastNumber, htmlAttributes: new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.LastNumber, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.LastNumber, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <div class="col-md-6 col-lg-4">
                <div class="form-group">
                    <div class="col-md-offset-1 col-md-11 col-lg-offset-0">
                        <input type="submit" value="Generate" class="btn btn-primary btn-lg"/>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
<hr />
<h4>Result</h4>
<div class="alert" id="fizzBuzzResult"></div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/Application/index.js")
}
